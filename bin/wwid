#!/usr/bin/env perl6

use v6;

sub show_help() {
    say qq:to/END_HELP/;
{$*PROGRAM.basename} - A todo list manager that tell you what to do

Usage: {$*PROGRAM.basename} [command] [options]

    help	Shows this help.
    new		Create a new task
    next	Display the next task to work on
END_HELP
}

multi MAIN('new') {
    say '*** STUB *** Create a new task';
}

multi MAIN('next') {
    say '*** STUB *** Show me the next task';
}

multi MAIN(Str $?) {
    show_help();
}
